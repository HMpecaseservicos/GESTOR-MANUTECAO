# Configurações do Sistema de Gestão de Manutenção de Frota
# Copie este arquivo para .env e configure suas variáveis

# Segurança
SECRET_KEY=sua-chave-secreta-super-segura-aqui-mude-isto

# Ambiente
FLASK_ENV=development
FLASK_DEBUG=True

# Banco de Dados
DATABASE_PATH=database/frota.db

# Servidor
PORT=5000
HOST=0.0.0.0

# Admin padrão (primeiro acesso)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
ADMIN_EMAIL=admin@gestorfrota.com

# Rate Limiting
RATELIMIT_ENABLED=True
RATELIMIT_STORAGE_URL=memory://

# Logs
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
